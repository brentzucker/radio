<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="appathon.radioapp.ListenerFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <EditText
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputID" android:layout_gravity="left|top"/>
        <Button
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="Add Song to queue"
                android:id="@+id/addSong" android:layout_gravity="right|top"/>

    </LinearLayout>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/songList" android:layout_gravity="bottom|center"/>

</LinearLayout>
